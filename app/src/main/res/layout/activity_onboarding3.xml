<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryColor"
    tools:context=".OnboardingActivity3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/accentColor"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Skip Button -->
        <Button
            android:id="@+id/skipbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/primaryColor"
            android:text="@string/Skip"
            android:textColor="@color/black" />

        <!-- Illustration -->
        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="314dp"
            android:layout_marginBottom="32dp"
            android:src="@drawable/onboarding3" />

        <!-- Title -->
        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="@string/Onboarding_topic3"
            android:textSize="34sp"
            android:textStyle="bold" />

        <!-- Description -->
        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:text="You can organize your daily tasks by adding your tasks into separate categories"
            android:textAlignment="center"
            android:textSize="16sp" />

        <!-- Progress Indicators -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imageButton9"
                android:layout_width="21dp"
                android:layout_height="3dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="@color/secondaryColor"
                android:src="@drawable/baseline_rectangle_25" />

            <ImageButton
                android:id="@+id/imageButton7"
                android:layout_width="21dp"
                android:layout_height="3dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="@color/accentColor"
                android:src="@drawable/baseline_rectangle_25" />

            <ImageButton
                android:id="@+id/imageButton8"
                android:layout_width="21dp"
                android:layout_height="3dp"
                android:backgroundTint="@color/secondaryColor"
                android:src="@drawable/baseline_rectangle_24" />
        </LinearLayout>

        <!-- Navigation Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/nextbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Next"
                android:textColor="@color/primaryColor"
                android:backgroundTint="@color/secondaryColor" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>