<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryColor"
    tools:context=".OnboardingActivity1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Skip Button -->
        <Button
            android:id="@+id/skipbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Skip"
            android:textColor="@color/black"
            android:backgroundTint="@color/primaryColor"
            android:layout_gravity="start"
            android:layout_marginBottom="16dp" />

        <!-- Illustration -->
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="314dp"
            android:src="@drawable/onboarding1"
            android:layout_marginBottom="32dp" />

        <!-- Title -->
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Onboarding_topic1"
            android:textSize="34sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Description -->
        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="In ToDo you can create your personalized routine to stay productive"
            android:textAlignment="center"
            android:textSize="16sp"
            android:layout_marginBottom="32dp" />

        <!-- Progress Indicators -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="32dp">

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="21dp"
                android:layout_height="3dp"
                android:src="@drawable/baseline_rectangle_24"
                android:backgroundTint="@color/secondaryColor"
                android:background="@null"
                android:layout_marginEnd="8dp" />

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="21dp"
                android:layout_height="3dp"
                android:src="@drawable/baseline_rectangle_25"
                android:backgroundTint="@color/secondaryColor"
                android:background="@null"
                android:layout_marginEnd="8dp" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="21dp"
                android:layout_height="3dp"
                android:src="@drawable/baseline_rectangle_25"
                android:backgroundTint="@color/secondaryColor"
                android:background="@null" />
        </LinearLayout>

        <!-- Navigation Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/nextbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/secondaryColor"
                android:text="@string/welcomeNavigation"
                android:textColor="@color/primaryColor" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>